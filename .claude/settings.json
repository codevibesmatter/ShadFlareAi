{
  "hooks": {
    "SessionStart": [
      {
        "matchers": {
          "source": ["startup", "clear"]
        },
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/session-start.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/planning-context.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/session-summary.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/autonomous-session-manager.sh Stop",
            "timeout": 90
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "git add -A && git commit -m \"[TEMP] Session snapshot - $(date '+%Y-%m-%d %H:%M:%S')\" || true",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
